2 cmd

sudo wget -O /etc/apt/trusted.gpg.d/php.gpg https://packages.sury.org/php/apt.gpg
echo "deb https://packages.sury.org/php/ $(lsb_release -sc) main" | sudo tee /etc/apt/sources.list.d/php.list

3 package
apt update
php7.4
php7.4-mysql

4 cmd
wget -O /tmp/wp-cli.phar https://raw.githubusercontent.com/wp-cli/builds/gh-pages/phar/wp-cli.phar
chmod +x /tmp/wp-cli.phar
sudo mv /tmp/wp-cli.phar /usr/local/bin/wp
sudo wp cli update
sudo mkdir /var/www/site 
sudo chown -R www-data:www-data /var/www/site

5 Create DB

6create and activate vhost on /var/www/site or redirect default on wordpress folder
or rename index.html in /var/www/html

7 install via cli
cd /var/www/site/
sudo -u www-data wp core download
sudo -u www-data wp core config --dbname=wordpress --dbuser=wordpress --dbpass=wordpress
sudo -u www-data wp core install --url=http --title=Titletext --admin_user=admin  --admin_password=password --admin_email=email



